{
  "name": "@digifox/eth-js",
  "version": "1.2.0",
  "description": "Minimal js library to generate Ethereum private keys and sign messages",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Digifox-Finance/eth-js.git"
  },
  "author": "chasepoirier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Digifox-Finance/eth-js/issues"
  },
  "homepage": "https://github.com/Digifox-Finance/eth-js#readme",
  "devDependencies": {
    "@types/elliptic": "^6.4.12",
    "@types/jest": "^26.0.15",
    "@types/secp256k1": "^4.0.1",
    "assert": "^2.0.0",
    "async-test-util": "^1.7.3",
    "jest": "^26.6.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@ethersproject/address": "^5.0.5",
    "@ethersproject/solidity": "^5.0.5",
    "bn.js": "^5.1.3",
    "elliptic": "^6.5.3",
    "ethereumjs-tx": "^2.1.2",
    "ethereumjs-util": "^7.0.7",
    "is-hex-prefixed": "^1.0.0",
    "secp256k1": "^4.0.2",
    "strip-hex-prefix": "^1.0.0"
  }
}
